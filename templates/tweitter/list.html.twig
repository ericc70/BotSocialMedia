{% extends 'base.html.twig' %}

{% block title %}Hello TweitterController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container-fluid mt-5">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<h2>All messages</h2>
				</div>
				<div class="col-12">
					<table class="table table-dark table-striped">
						<thead>
							<tr>
								<th scope="col">creat at</th>
								<th scope="col">message</th>
								<th scope="col"><i class="bi bi-heart-fill"></i></th>
								<th scope="col"><i class="bi bi-arrow-repeat"></i></th>
								<th scope="col">
									action</th>
							</tr>
						</thead>
						<tbody>
							{% for tweet in tweets %}
								<tr>
									<th scope="row">{{ tweet.created_at   }}</th>
									<td>
										{{ tweet.text}}
									</td>
									<td>
										{{ tweet.favorite_count}}
									</td>
									<td>
										{{ tweet.retweet_count}}
									</td>
									<td>
										detail - edit -
										<a href=" {{ path('twitterone',{idTweet:tweet.id} ) }} ">voir</a>
									</td>

								</tr>
							{% endfor %}
						</tbody>
					</table>
					<pre>
      {{ dump(tweets) }}
    </pre>
				</div>
			</div>
		</div>

	</div>
{% endblock %}
