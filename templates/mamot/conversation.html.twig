{% extends 'base.html.twig' %}

{% block title %}Mastodon conversation!
{% endblock %}

{% block body %}
	<section class="container my-4">
		<div class="row">
			<div class="col-12">
				<h2>
				list des conversations
				</h2>
			</div>
		</div>
	</section>

	<section class="container">
		<div class ="row">
			<div class="col-12">
			<table class="table table-dark table-striped">
					<thead>
						<tr>
							<th scope="col">creat at</th>
							
							<th scope="col">Auteur</th>

							<th scope="col">message</th>
							<th scope="col">
								<i class="bi bi-heart-fill"></i>
							</th>
							<th scope="col">
								<i class="bi bi-arrow-repeat"></i>
							</th>
							<th scope="col">	action</th>
						</tr>
					</thead>
					<tbody>
						{% for conversation in conversations %}
							<tr>
								<td>{{conversation.last_status.created_at}}</td>
								<td>
									{% for account in conversation.accounts %}
											{{ account.username}} 
									{% endfor %}
							</td>

									<td>{{conversation.last_status.content | raw}}</td>

								<td> m cue vue</td>
								<td> 
								{% if conversation.last_status.in_reply_to_id %}
								Voir le fil
								{% endif %}
								</td>
								<td>suppri</td>

							</tr>

						{% endfor %}

					</tbody>
					</table>


			</div>
		
		</div>
	
	</section>


<section>
	<pre>
		{{ dump(conversations) }}
	</pre>
</section>


<script>

</script>
	{% endblock %}
