{% extends 'base.html.twig' %}

{% block title %}Mastodon conversation!
{% endblock %}

{% block body %}
	<section class="container my-4">
		<div class="row">
			<div class="col-12">
				<h2>
				vu du fil de conversations
				</h2>
			</div>
		</div>
	</section>

	<section class="container">
		<div class ="row">
			<div class="col-12">
		<table class="table table-dark table-striped">
					<thead>
						<tr>
							<th scope="col">creat at</th>
							
							<th scope="col">Auteur</th>

							<th scope="col">message</th>
							<th scope="col">
								<i class="bi bi-heart-fill"></i>
							</th>
							<th scope="col">
								<i class="bi bi-arrow-repeat"></i>
							</th>
							<th scope="col">	action</th>
						</tr>
					</thead>
					{% for pouet in pouets %}
						<tr>
						<td> {{ pouet.created_at}}</td>
						<td> {{pouet.account.username }}</td>
						<td> {{ pouet.content | raw}}</td>
						<td> </td>
						<td></td>
						<td> </td>
						
						</tr>
					{% endfor %}
					<tbody>
					</tbody>
					</table>




			<pre>
				{{ dump(pouets) }}
			</pre>


			</div>
		
		</div>
	
	</section>






	{% endblock %}
