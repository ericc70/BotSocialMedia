{% extends 'base.html.twig' %}

{% block title %}Mastodon conversation!
{% endblock %}

{% block body %}
	<section class="container my-4 mb-4 minheiffoo ">
		<div class="row">
			<div class="col-12">
				<h2>
			 Vue de la conversation
				</h2>
			</div>
		</div>

		<div class ="row">
			<div class="col-12">
		<table class="table table-dark table-striped">
					<thead>
						<tr>
							<th scope="col">Date</th>
							<th scope="col">Auteur</th>
							<th scope="col">Message</th>
							<th scope="col">Action</th>
						</tr>
					</thead>
					{% for pouet in pouets %}
						<tr>
						<td> {{ pouet.created_at | date('d-m-Y H:m:s')}}</td>
						<td> {{pouet.account.username }}</td>
						<td> {{ pouet.content | raw}}</td>
						<td> </td>
						</tr>
					{% endfor %}
					<tbody>
					</tbody>
					</table>
			</div>
		</div>
	</section>

	{% endblock %}
